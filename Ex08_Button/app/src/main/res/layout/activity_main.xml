<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textVire1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:text="Hello World!"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="234dp"
        android:layout_height="142dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_test1"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="@+id/textVire1"
        app:layout_constraintTop_toBottomOf="@+id/textVire1"
        tools:foreground="@drawable/btn_test1" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="209dp"
        android:layout_height="185dp"
        android:layout_marginTop="80dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:srcCompat="@drawable/btn_test1" />

</android.support.constraint.ConstraintLayout>